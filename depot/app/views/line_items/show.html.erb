<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

 <h2>Your Cart</h2>
 <table>
       <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>price</th>

     </tr>
 	    <% @arr = Array.new %>
       <% @added_to_cart.each do |item| %>
     
      <tr>
         <td><%= item.product.title %></td>
         <td><%= item.quantity %></td>
         <td class="item_price"><%= number_to_currency(item.product.price * item.quantity) %></td>
         
         <% @arr << item.product.price * item.quantity  %>
          <td><%= link_to 'remove',mycart_delete_path(:item_id => item.id), method: :post %></td>
     </tr>
   <% end %>
         <% $sum = @arr.sum %>
         
      <tr class="total_line">
      
      <td>Total</td>

      <td class="total_cell"><%= number_to_currency($sum) %></td>

     </tr>
 
 </table>
   


  <table >
    <tr >
  <td > <%= button_to "Checkout", new_order_path, :method => :get %></td>
  <td> <%= button_to 'Empty cart', @line_item, :method => :delete,data: { confirm: 'Are you sure?' } %></td>
   <td><%= button_to 'continu_shopping', '/' %></td>
   </tr>
 </table>

