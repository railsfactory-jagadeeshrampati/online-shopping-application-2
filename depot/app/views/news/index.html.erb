<h1>Listing news</h1>

<table>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <dl> </dl>
          <dt><b><%= news.title %></b></dt>
          <dd><%= news.description %></dd>
          <dd>Posted <%= time_ago_in_words(news.created_at) %> ago</dd>
        <% if (user_signed_in? && current_user.role == 'admin') %>
        <dd><%= link_to 'Show', news %>
          <%= link_to 'Edit', edit_news_path(news) %>
          <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></dd>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if (user_signed_in? && current_user.role == 'admin') %>
<%= link_to 'New News', new_news_path %>
<%end%>
